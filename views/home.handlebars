<div class="col-md-12">
        {{#if article}}
            {{#each article}}
            <div class="panel panel-default" style="margin-bottom:20px;">
                <div class="panel-heading">
                    <h4>{{this.title}}</h4>
                </div>
                <div class="panel-body">
                    <p> {{this.summary}}</p>
                    <a href={{this.link}} target="_blank"><button type="button" class="btn btn-link">More Info</button></a>
                    <br><br>
                    <button type="button" class="btn btn-warning success" data-id={{this._id}}>Save Article</button>
                </div>
            </div>
            {{/each}}
        {{else}}
        <div class="panel panel-default">
            <div class="panel-body">
            <h4>Looks like there are no new articles, ugh</h4>
            </div>
         </div>
        {{/if}}
    </div>
</div>